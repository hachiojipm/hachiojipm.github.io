: cascade base
: around content -> {
<nav>
  <ul>
    <li><a href="<: '/archives.html' | uri_for :>">Archives</a></li>
  </ul>
</nav>
: my $entry = $blog.entry('2013-09-09-01')
<article>
  <: $entry.html_body | mark_raw :>
</article>
:   if $blog.tags().size() {
<aside class="tags">
  <h1>Tags</h1>
  <ul class="tags">
  :     for $blog.tags() -> $tag {
  <li><a href="<: $tag.site_path | uri_for :>"><: $tag.name :>(<: $tag.count :>)</a></li>
  :      }
  </ul>
</aside>
:   }
: }
